{
  "manifest_version": 3,
  "name": "Smooth Pause",
  "version": "1.0.0",
  "description": "Pause YouTube videos smoothly",
  "icons": {"128": "icon_128.png"},
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Smooth Pause"
  },
  "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}
